<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DetailTextView">
        <attr name="titleText" format="string"/>
        <attr name="detailText" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="detailTextSize" format="dimension"/>
        <attr name="dtvContentPadding" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="detailTextColor" format="color"/>
        <attr name="dividerHeight" format="dimension"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
</resources>
